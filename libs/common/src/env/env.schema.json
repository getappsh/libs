{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Getapp-Environment, schema",
  "description": "Environment variables schema for getapp microservice.",
  "required": [
    "scopes"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "scopes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "description",
          "variables"
        ],
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "variables": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "description",
                "required",
                "type"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string"
                },
                "subTitle": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "required": {
                  "oneOf": [
                    {
                      "type": "boolean"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "if": {
                          "type": "object",
                          "propertyNames": {
                            "type": "string"
                          },
                          "additionalProperties": {
                            "type": "string"
                          },
                          "minProperties": 1
                        },
                        "then": {
                          "type": "boolean"
                        }
                      },
                      "required": [
                        "if",
                        "then"
                      ],
                      "additionalProperties": false
                    }
                  ]
                },
                "format": {
                  "type": "string"
                },
                "pattern": {
                  "type": "string"
                },
                "default": {},
                "example": {},
                "type": {
                  "type": "string",
                  "enum": [
                    "number",
                    "string",
                    "boolean",
                    "enum"
                  ]
                },
                "enum": {
                  "type": "array",
                  "items": {
                    "type": [
                      "string",
                      "number",
                      "boolean"
                    ]
                  },
                  "minItems": 1
                },
                "deprecated": {
                  "type": "boolean",
                  "description": "Indicates whether the variable is deprecated"
                },
                "deprecationNote": {
                  "type": "string",
                  "description": "Optional note explaining why the variable is deprecated or what to use instead"
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "type": {
                        "const": "enum"
                      }
                    }
                  },
                  "then": {
                    "required": [
                      "enum"
                    ]
                  },
                  "else": {
                    "not": {
                      "required": [
                        "enum"
                      ]
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}