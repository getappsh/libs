{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Getapp-Environment, schema",
  "description": "Environment variables schema for getapp microservice.",
  "required": [
    "scopes"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "scopes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "description",
          "variables"
        ],
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "description"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the tag, used in the code and documentation"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the tag, used to describe the tag in the documentation"
                }
              }
            }
          },
          "variables": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "description",
                "required",
                "type"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the environment variable, used in the code and documentation"
                },
                "tag": {
                  "type": "string",
                  "description": "Optional tag for the variable, for a separate section in the documentation"
                },
                "description": {
                  "type": "string",
                  "description": "description of the environment variable, used to describing the var in the documentation"
                },
                "warning": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Optional warnings for the variable, to highlight important information in the documentation"
                },
                "notes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Optional notes for the variable, to provide additional information in the documentation"
                },
                "required": {
                  "oneOf": [
                    {
                      "type": "boolean"
                    },
                    {
                      "type": "object",
                      "oneOf": [
                        {
                          "properties": {
                            "if": {
                              "type": "object",
                              "propertyNames": {
                                "type": "string"
                              },
                              "additionalProperties": {
                                "type": "string"
                              },
                              "minProperties": 1
                            }
                          },
                          "required": [
                            "if"
                          ],
                          "additionalProperties": false
                        },
                        {
                          "properties": {
                            "oneOf": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "propertyNames": {
                                  "type": "string"
                                },
                                "additionalProperties": {
                                  "type": "string"
                                },
                                "minProperties": 1
                              },
                              "minItems": 1
                            }
                          },
                          "required": [
                            "oneOf"
                          ],
                          "additionalProperties": false
                        }
                      ]
                    }
                  ]
                },
                "format": {
                  "type": "string",
                  "description": "Optional format for the variable, to specify the expected format of the value (e.g., 'email', 'url', 'date')"
                },
                "pattern": {
                  "type": "string",
                  "description": "Optional regex pattern for the variable, to validate the value against a specific pattern"
                },
                "default": {},
                "example": {},
                "type": {
                  "type": "string",
                  "enum": [
                    "number",
                    "string",
                    "boolean",
                    "enum"
                  ]
                },
                "enum": {
                  "type": "array",
                  "items": {
                    "type": [
                      "string",
                      "number",
                      "boolean"
                    ]
                  },
                  "minItems": 1
                },
                "deprecated": {
                  "type": "boolean",
                  "description": "Indicates whether the variable is deprecated"
                },
                "deprecationNote": {
                  "type": "string",
                  "description": "Optional note explaining why the variable is deprecated or what to use instead"
                },
                "hidden": {
                  "type": "boolean",
                  "description": "Optional flag to hide the variable from documentation"
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "type": {
                        "const": "enum"
                      }
                    }
                  },
                  "then": {
                    "required": [
                      "enum"
                    ]
                  },
                  "else": {
                    "not": {
                      "required": [
                        "enum"
                      ]
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}